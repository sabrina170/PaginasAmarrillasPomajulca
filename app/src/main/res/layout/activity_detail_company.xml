<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.DetailCompanyActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".activities.DetailContactActivity">

        <TextView
            android:id="@+id/category_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textAlignment="center"
            android:textColor="@color/negro"
            android:textSize="18sp"
            android:layout_margin="13dp"
            android:textStyle="bold"
            tools:text="Tecsup"
            android:background="@color/amarillo"/>

        <ImageView
            android:layout_margin="15dp"
            android:id="@+id/logo_Image"
            android:layout_width="224dp"
            android:layout_height="184dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            tools:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/name_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textAlignment="center"
            android:textColor="@color/negro"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="Tecsup" />



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="16sp"
            android:text="Direccion :" />

        <TextView
            android:id="@+id/address_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textAlignment="center"
            android:textColor="@color/negro"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="chaclacayo Av.Larco" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="16sp"
            android:text="Telefono:" />

        <TextView
            android:id="@+id/phone_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textAlignment="center"
            android:textColor="@color/negro"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="321312312312" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="16sp"
            android:text="Email:" />

        <TextView
            android:id="@+id/email_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textAlignment="center"
            android:textColor="@color/negro"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="dsadasd@gmail.com" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="16sp"
            android:text="Url:" />

        <TextView
            android:id="@+id/url_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textAlignment="center"
            android:textColor="@color/negro"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="www.sdasdasd.com" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="16sp"
            android:text="Info:" />

        <TextView
            android:id="@+id/info_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textAlignment="center"
            android:textColor="@color/negro"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:text="Buen servicio " />
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:background="@color/amarillo">
         <Button
             android:id="@+id/phone_button"
             android:layout_width="50dp"
             android:layout_height="wrap_content"
             android:layout_marginTop="10dp"
             android:layout_margin="10dp"
             android:textColor="@color/colorAccent"
             android:background="@drawable/ic_local_phone_black_24dp"/>
               <Button
                   android:id="@+id/web_button"
                   android:layout_width="50dp"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="10dp"
                   android:layout_margin="10dp"
                   android:background="@drawable/ic_language_black_24dp"
                   android:textColor="@color/colorAccent"/>
               <Button
                   android:id="@+id/share_button"
                   android:layout_width="50dp"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="10dp"
                   android:layout_margin="10dp"
                   android:background="@drawable/ic_share_black_24dp"
                   android:textColor="@color/colorAccent"/>
               <Button
                   android:id="@+id/sms_button"
                   android:layout_width="50dp"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="10dp"
                   android:layout_margin="10dp"
                   android:background="@drawable/ic_question_answer_black_24dp"
                   android:textColor="@color/colorAccent"/>

               <Button
                   android:id="@+id/gmail_button"
                   android:layout_width="50dp"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="10dp"
                   android:layout_margin="10dp"
                   android:background="@drawable/ic_email_black_24dp"
                   android:textColor="@color/colorAccent"/>


           </LinearLayout>


    </LinearLayout>



</ScrollView>